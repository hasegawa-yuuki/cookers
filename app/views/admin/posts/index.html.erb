<h1>Admin::Posts#index</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>post_user</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= l post.created_at, format: :long %></td>
        <td><%= link_to "destroy", admin_post_path(post), method: :delete, data: { confirm: "reary?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to  "back", admin_root_path, class: "btn btn-secondary" %>