<h1 class="mt-4">投稿一覧</h1>

<div class="my-4">
  <%= form_with url: admin_posts_path, method: :get do |f| %>
    <%= f.search_field :keyword, value: params[:keyword], placeholder: "キーワードで検索" %>
    <%= f.submit "検索" %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>title</th>
      <th>post_user</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td><%= post.title %></td>
        <td><%= post.user.name %></td>
        <td><%= l post.created_at, format: :long %></td>
        <td><%= link_to "destroy", admin_post_path(post), method: :delete, data: { confirm: "reary?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to  "back", admin_root_path, class: "btn btn-secondary" %>