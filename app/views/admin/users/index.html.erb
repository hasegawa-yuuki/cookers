<h1>Admin::Users#index</h1>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>email</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= l user.created_at, format: :long %></td>
        <td><%= link_to "destroy", admin_user_path(user), method: :delete, data: { confirm: "reary?" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to  "back", admin_root_path, class: "btn btn-secondary" %>
