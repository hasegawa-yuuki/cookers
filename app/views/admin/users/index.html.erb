<h1 class="mt-4">ユーザー一覧</h1>

<div class="my-4">
  <%= form_with url: admin_users_path, method: :get do |f| %>
    <%= f.search_field :keyword, value: params[:keyword], placeholder: "キーワードで検索" %>
    <%= f.submit "検索" %>
  <% end %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>id</th>
      <th>name</th>
      <th>email</th>
      <th>created_at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= l user.created_at, format: :long %></td>
        <td><%= link_to "destroy", admin_user_path(user), method: :delete, data: { confirm: "reary?" }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to  "back", admin_root_path, class: "btn btn-secondary" %>
